# ================================
# Public environment variables
# These are exposed to the frontend and are safe to be public.
# Prefix with NEXT_PUBLIC_ is required for Next.js to expose them.
# ================================

NEXT_PUBLIC_SANITY_PROJECT_ID=           # Your Sanity project ID (e.g. "abc123")
NEXT_PUBLIC_SANITY_DATASET=              # Sanity dataset (e.g. "production")
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=       # Clerk publishable key for client auth
NEXT_PUBLIC_BASE_URL=                     # Base URL of your app (e.g. "https://yourdomain.com")

# ================================
# Private environment variables
# Keep these secret! Do NOT expose these to the frontend.
# ================================

SANITY_API_TOKEN=                        # Sanity API token with write access
SANITY_API_READ_TOKEN=                   # Sanity API token with read access only

CLERK_SECRET_KEY=                        # Clerk secret key for backend auth

STRIPE_SECRET_KEY=                       # Stripe secret key for payments
STRIPE_WEBHOOK_SECRET=                   # Stripe webhook secret for verifying events
